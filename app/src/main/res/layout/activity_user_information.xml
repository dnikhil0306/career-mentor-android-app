<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".User_Information">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        />



    <TextView
        android:id="@+id/profile_view_role1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white_10"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="Role"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_below="@id/profile_view_role1"
        android:id="@+id/profile_view_name1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white_10"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="Name"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle=""
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/profile_view_email1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/profile_view_name1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white_10"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="email"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/profile_view_phone1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/profile_view_email1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white_10"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="Phone"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        />

</RelativeLayout>